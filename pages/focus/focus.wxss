page {
  background-color: #ffffff;
  color: #000000;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
}

.header-content {
    display: flex;
    align-items: center;
    height: 100%;
    padding-left: 16px;
}

.back-btn {
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10px;
}

.back-arrow {
    width: 10px;
    height: 10px;
    border-top: 2px solid #000000;
    border-left: 2px solid #000000;
    transform: rotate(-45deg);
}

.title {
    font-size: 16px;
    font-weight: 600;
    color: #000000;
}

.content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
}

/* Ready State */
.ready-view {
    width: 100%;
    text-align: center;
}

.text-group {
    margin-bottom: 60px;
}

.main-text {
    display: block;
    font-size: 24px;
    font-weight: 400;
    color: #000000;
    margin-bottom: 12px;
}

.start-btn {
    width: 100%;
    height: 56px;
    line-height: 56px;
    background-color: #000000;
    color: #ffffff;
    font-size: 16px;
    font-weight: 500;
    border-radius: 8px;
    border: none;
}
.start-btn::after { border: none; }


/* Running State */
.running-view {
    width: 100%;
    text-align: center;
}

.target-name {
    display: block;
    font-size: 16px;
    color: #999999;
    margin-bottom: 20px;
}

.timer-display {
    font-size: 80px;
    font-weight: 200; /* Thin font */
    color: #000000;
    margin-bottom: 20px;
    font-variant-numeric: tabular-nums;
}

.status-text {
    display: block;
    font-size: 14px;
    color: #999999;
    margin-bottom: 60px;
}

.stop-btn {
    width: 140px;
    height: 48px;
    line-height: 48px;
    background-color: transparent;
    border: 1px solid #e0e0e0;
    color: #000000;
    font-size: 16px;
    border-radius: 24px;
}
.stop-btn::after { border: none; }
