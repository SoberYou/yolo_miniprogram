<view class="container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">出生日期</text>
      <picker mode="date" value="{{birthDate}}" start="1900-01-01" end="2025-12-31" bindchange="bindDateChange">
        <view class="picker">
          {{birthDate || '请选择出生日期'}}
        </view>
      </picker>
    </view>
    <view class="form-item">
      <text class="label">预期寿命 (年)</text>
      <input class="input" type="number" placeholder="请输入预期寿命" value="{{expectedLifeYears}}" bindinput="bindLifeInput" />
    </view>
  </view>
  <button class="submit-btn" bindtap="saveConfig">保存配置</button>
</view>
