.container {
  padding: 20px;
}
.form-group {
  margin-top: 20px;
  background-color: #fff;
  border-radius: 8px;
  padding: 0 16px;
}
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  border-bottom: 1px solid #eee;
}
.form-item:last-child {
  border-bottom: none;
}
.label {
  font-size: 16px;
  color: #333;
}
.picker, .input {
  font-size: 16px;
  color: #666;
  text-align: right;
}
.submit-btn {
  margin-top: 40px;
  background-color: #07c160;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
