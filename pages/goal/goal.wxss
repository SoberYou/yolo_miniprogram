/** pages/goal/goal.wxss */
page {
  background-color: #ffffff;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Header */
.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  padding-left: 16px;
  position: relative;
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}

.back-arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  transform: rotate(-45deg);
}

.page-title {
  font-size: 16px;
  font-weight: 500;
  color: #000000;
  opacity: 0; /* Hidden initially, maybe shown on scroll in future, keeping layout stable */
}

/* Main Content */
.main-content {
  width: 80%;
  box-sizing: border-box;
}

/* Section Header */
.section-header {
  padding: 24px 24px 40px;
}

.goal-title {
  font-size: 32px;
  font-weight: 600;
  color: #000;
  margin-bottom: 16px;
}

.goal-desc-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.goal-desc {
  font-size: 14px;
  color: #999;
}

.goal-desc.sub {
  color: #666;
}

/* Stats Zone */
.section-stats {
  padding: 0 24px;
  display: flex;
  gap: 16px;
  margin-bottom: 48px;
}

.stat-card {
  flex: 1;
  background-color: #f9f9f9;
  padding: 20px;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 20px;
  font-weight: 500;
  color: #333;
}

/* History Zone (Heatmap) */
.section-history {
  padding: 0 24px;
  margin-bottom: 48px;
}

.history-label {
  font-size: 14px;
  color: #999;
  margin-bottom: 16px;
}

.heatmap-container {
  background-color: #0d1117; /* Dark background like GitHub dark mode */
  border-radius: 6px;
  padding: 16px;
  display: flex;
  gap: 8px;
  overflow: hidden; /* Ensure rounded corners */
}

.weekday-labels {
  display: flex;
  flex-direction: column;
  padding-top: 20px; /* Align with grid below month labels */
  gap: 3px; /* Match grid gap */
}

.weekday-label {
  font-size: 9px;
  color: #8b949e;
  height: 10px; /* Match cell height */
  line-height: 10px;
  visibility: hidden; /* Hide by default */
}

/* Show specific labels */
.weekday-label:nth-child(1) { visibility: visible; margin-top: 13px; } /* Mon (Row 1) */
.weekday-label:nth-child(2) { visibility: visible; margin-top: 26px; } /* Wed (Row 3) - 13*2 = 26 gap */
.weekday-label:nth-child(3) { visibility: visible; margin-top: 26px; } /* Fri (Row 5) */

/* Refined label positioning */
.weekday-labels {
  position: relative;
  width: 20px;
  height: 91px; /* 7 * 13 */
  margin-top: 20px; /* Space for month labels */
}

.weekday-label {
  position: absolute;
  left: 0;
  font-size: 9px;
  color: #8b949e;
  line-height: 10px;
  visibility: visible;
}

.weekday-label:nth-child(1) { top: 13px; } /* Mon: Row 1 */
.weekday-label:nth-child(2) { top: 39px; } /* Wed: Row 3 */
.weekday-label:nth-child(3) { top: 65px; } /* Fri: Row 5 */


.heatmap-scroll {
  flex: 1;
  width: 0; /* Flexbox trick for scroll-view */
}

.heatmap-content {
  display: inline-block;
}

.months-row {
  display: flex;
  height: 20px;
  margin-bottom: 4px;
}

.month-col {
  width: 13px; /* 10px cell + 3px gap */
  flex-shrink: 0;
  position: relative;
}

.month-text {
  font-size: 9px;
  color: #8b949e;
  position: absolute;
  top: 0;
  left: 0;
  white-space: nowrap;
}

.weeks-row {
  display: flex;
}

.week-col {
  display: flex;
  flex-direction: column;
  gap: 3px;
  margin-right: 3px;
  flex-shrink: 0;
}

.day-cell {
  width: 10px;
  height: 10px;
  border-radius: 2px;
  background-color: #161b22; /* Level 0 */
}

/* Colors - Dark Mode Theme */
.level-0 { background-color: #161b22; }
.level-1 { background-color: #0e4429; }
.level-2 { background-color: #006d32; }
.level-3 { background-color: #26a641; }
.level-4 { background-color: #39d353; }

/* Legend */
.heatmap-legend {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 8px;
  gap: 4px;
}

.legend-text {
  font-size: 10px;
  color: #8b949e;
  margin: 0 4px;
}

.legend-items {
  display: flex;
  gap: 3px;
}

/* Hide original list styles if necessary, but we replaced the HTML so it's fine */


/* Actions Zone */
.section-actions {
  padding: 0 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.btn-primary {
  width: 100% !important;
  background-color: #000000;
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 8px;
  padding: 12px 0;
  line-height: 1.5;
  margin: 0;
}

.btn-secondary {
  width: 100% !important;
  background-color: transparent;
  color: #999999;
  font-size: 14px;
  font-weight: 400;
  padding: 12px 0;
  line-height: 1.5;
  margin: 0;
}

.btn-primary::after, .btn-secondary::after {
  border: none;
}
