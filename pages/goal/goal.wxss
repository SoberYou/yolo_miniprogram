/** pages/goal/goal.wxss */
page {
  background-color: #ffffff;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Header */
.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  padding-left: 16px;
  position: relative;
}

.back-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}

.back-arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #000;
  border-left: 2px solid #000;
  transform: rotate(-45deg);
}

.page-title {
  font-size: 16px;
  font-weight: 500;
  color: #000000;
  opacity: 0; /* Hidden initially, maybe shown on scroll in future, keeping layout stable */
}

/* Main Content */
.main-content {
  width: 80%;
  box-sizing: border-box;
}

/* Section Header */
.section-header {
  padding: 24px 24px 40px;
}

.goal-title {
  font-size: 32px;
  font-weight: 600;
  color: #000;
  margin-bottom: 16px;
}

.goal-desc-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.goal-desc {
  font-size: 14px;
  color: #999;
}

.goal-desc.sub {
  color: #666;
}

/* Stats Zone */
.section-stats {
  padding: 0 24px;
  display: flex;
  gap: 16px;
  margin-bottom: 48px;
}

.stat-card {
  flex: 1;
  background-color: #f9f9f9;
  padding: 20px;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 20px;
  font-weight: 500;
  color: #333;
}

/* History Zone */
.section-history {
  padding: 0 24px;
  margin-bottom: 48px;
}

.history-label {
  font-size: 14px;
  color: #999;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 16px 0;
  border-bottom: 1px solid #f9f9f9;
}

.history-date {
  font-size: 16px;
  color: #333;
}

.history-duration {
  font-size: 16px;
  color: #666;
  font-family: 'SF Mono', 'Roboto Mono', monospace; /* Monospace for numbers looks cleaner */
}

/* Actions Zone */
.section-actions {
  padding: 0 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.btn-primary {
  width: 100% !important;
  background-color: #000000;
  color: #ffffff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 8px;
  padding: 12px 0;
  line-height: 1.5;
  margin: 0;
}

.btn-secondary {
  width: 100% !important;
  background-color: transparent;
  color: #999999;
  font-size: 14px;
  font-weight: 400;
  padding: 12px 0;
  line-height: 1.5;
  margin: 0;
}

.btn-primary::after, .btn-secondary::after {
  border: none;
}
